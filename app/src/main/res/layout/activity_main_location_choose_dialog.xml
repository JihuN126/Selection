<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="12">





    <LinearLayout
        android:id="@+id/categoryLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="업종"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="@font/pretendardlight"/>

        <NumberPicker
            android:theme="@style/NumberPickerTheme"
            android:id="@+id/categoryPicker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardlight"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:focusedByDefault="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매장"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="@font/pretendardlight"/>

        <NumberPicker
            android:theme="@style/NumberPickerTheme"
            android:id="@+id/storePicker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardlight"
            android:focusable="false"
            android:focusedByDefault="false"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/search_location_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="매장명을 입력해주세요"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_location_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색하기"
                android:textSize="15sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_forward_ios_24"/>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/cancel_to_main_acitivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/save_location_to_main_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                android:textSize="20sp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></LinearLayout>





</LinearLayout>