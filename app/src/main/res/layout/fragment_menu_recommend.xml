<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="8">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="SELECTION"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/information_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_dehaze_24"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center">

        <TextView
            android:id="@+id/selected_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="위치를 선택해주세요"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recommend_saved_card_view"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.3"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAY1"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:id="@+id/pay1_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pay1_card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:text="default"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pay1_card_benefit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end
"
                    android:text="defaultBenefit"
                    android:textColor="@color/teal_200"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/pay1_card_image"
                    android:layout_width="140dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="70dp"
                    android:rotation="90"
                    android:src="@drawable/kookmin23" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAY2"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:id="@+id/pay2_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pay2_card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:text="default"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pay2_card_benefit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end
"
                    android:text="defaultBenefit"
                    android:textColor="@color/teal_200"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/pay2_card_image"
                    android:layout_width="140dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="70dp"
                    android:rotation="90"
                    android:src="@drawable/kookmin23" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>


    <androidx.cardview.widget.CardView
        android:visibility="invisible"
        android:id="@+id/recommend_new_card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:layout_gravity="center"
        app:contentPaddingLeft="15dp"
        app:contentPaddingTop="15dp"
        app:cardBackgroundColor="@color/toss"
        app:cardCornerRadius="15dp"
        android:layout_marginHorizontal="10dp">

        <ImageView
            android:id="@+id/recommend_card_image"
            android:layout_width="140dp"
            android:layout_height="86dp"
            android:layout_gravity="left"
            android:src="@drawable/kookmin12"
            android:layout_marginTop="11dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="30dp"
            android:text="발급 추천카드"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recommend_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="15dp"
            android:text="cardName"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

</LinearLayout>